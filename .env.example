# Application Environment
APP_ENV=dev
LOG_LEVEL=INFO

# Database
POSTGRES_DSN=postgresql+psycopg://user:password@localhost:5432/ai_maga

# Redis
REDIS_URL=redis://localhost:6379/0

# Yandex Cloud
YC_FOLDER_ID=your_folder_id_here
YC_OAUTH_TOKEN=your_oauth_token_here

# Yandex GPT
YANDEX_GPT_MODEL=gpt://foundationModels/text/latest

# Yandex SpeechKit
YANDEX_STT_MODEL=general
YANDEX_TTS_VOICE=ermil
YANDEX_TTS_VOICE_EN=en_US

# Yandex Vision
YANDEX_VISION_OCR_MODEL=ocr

# Yandex Translate
YANDEX_TRANSLATE_FOLDER_ID=your_folder_id_here

# Telegram Bot
TG_BOT_TOKEN=your_telegram_bot_token_here
TG_ALLOWED_USER_IDS=user_id1,user_id2

# HH.ru API
HH_API_TOKEN=your_hh_api_token_here

# LinkedIn (optional - official API)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# Audio I/O
AUDIO_INPUT_DEVICE=default
AUDIO_OUTPUT_DEVICE=default
HOTWORD=Мага

# Voice Pipeline
VOICE_PIPELINE_TIMEOUT=30
VOICE_PIPELINE_BUFFER_SIZE=4096
VOICE_PIPELINE_SAMPLE_RATE=16000

# LLM
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.7
LLM_TIMEOUT=60

# HTTP Client
HTTP_TIMEOUT=30
HTTP_MAX_RETRIES=3
HTTP_BACKOFF_FACTOR=2.0

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Metrics
METRICS_PORT=9090

# OpenTelemetry (optional)
OTEL_SERVICE_NAME=ai-maga
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
